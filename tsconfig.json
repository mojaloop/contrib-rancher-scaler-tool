{
  "include": [
    "src", 
    "ambient.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "test",
    "lib",
    "coverage"
  ],
  "compilerOptions": {
    // "typeRoots": [
    //   "./node_modules/@types",
    //   "typings"
    // ],
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*",
      ],
      // "@mojaloop/central-services-logger": [
      //   "types/@mojaloop/central-services-logger"
      // ]
    },
    "esModuleInterop": true
  }
}