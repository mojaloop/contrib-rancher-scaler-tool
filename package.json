{
  "name": "rancher-scaler",
  "version": "0.1.10",
  "description": "A simple cli tool to scale rancher clusters",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "ts-node ./src/index.ts",
    "kube-scale:up": "./scripts/_scale_once.sh local-scale:up",
    "kube-scale:down": "./scripts/_scale_once.sh local-scale:down",
    "local-scale:pre_up": "METHOD=PRE_SCALE_UP_GLOBAL ts-node ./src/index.ts",
    "local-scale:up": "METHOD=SCALE SCALE=UP ts-node ./src/index.ts",
    "local-scale:down": "METHOD=SCALE SCALE=DOWN ts-node ./src/index.ts",
    "local-scale:post_up": "METHOD=POST_SCALE_UP_GLOBAL ts-node ./src/index.ts",
    "local-scale:pre_down": "METHOD=PRE_SCALE_DOWN_GLOBAL ts-node ./src/index.ts",
    "local-scale:post_down": "METHOD=POST_SCALE_DOWN_GLOBAL ts-node ./src/index.ts",
    "local-verify": "METHOD=VERIFY ts-node ./src/index.ts",
    "bs": "npm run bootstrap",
    "bootstrap": "METHOD=BOOTSTRAP ts-node ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:unit": "jest --testMatch '**/src/**/*.unit.ts'",
    "test:service": "jest --testMatch '**/src/**/*.service.ts'",
    "test:coverage": "jest --testMatch '**/src/**/*.unit.ts' --coverage --coverageThreshold='{}'",
    "test:coverage-check": "jest --testMatch '**/src/**/*.unit.ts' --coverage",
    "lint": "eslint ./src/**/*.ts *.js",
    "release": "standard-version --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'",
    "watch": "tsc -w"
  },
  "author": "Lewis Daly",
  "license": "Apache-2.0",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@mojaloop/central-services-logger": "10.4.0",
    "@slack/webhook": "^5.0.3",
    "aws-sdk": "^2.713.0",
    "axios": "^0.19.2",
    "unzipper": "^0.10.11",
    "standard-version": "^8.0.2"
  },
  "devDependencies": {
    "@types/hapi__joi": "^17.1.2",
    "@types/jest": "25.2.2",
    "@types/unzipper": "^0.10.3",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "eslint": "7.3.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-cucumber": "^1.4.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^4.2.5",
    "jest": "26.0.1",
    "jest-cucumber": "^2.0.11",
    "jest-junit": "10.0.0",
    "lint-staged": "^10.2.3",
    "source-map-support": "0.5.12",
    "ts-jest": "^26.0.0",
    "ts-node": "8.3.0",
    "typescript": "3.9.2"
  }
}
